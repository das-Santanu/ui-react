{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types/src",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
